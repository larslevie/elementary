<% @categories.each do |category| %>
  <% vote = current_user.current_ballot!.votes.joins(:nomination).where(nominations: { category_id: category }).first %>
  <% voted_nominee_id = vote.nomination.nominee_id if vote.present? %>

  <%= react_component("BallotCategory",
    id: category.id,
    name: category.name,
    votedNomineeId: voted_nominee_id,
    winningNomineeId: nil,
    nominees: category.nominees) %>
<% end %>
